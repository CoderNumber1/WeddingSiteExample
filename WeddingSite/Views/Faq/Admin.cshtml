@{
    ViewBag.Title = "FAQ Admin";
}

@section scripts{
    <style>
        #header {
            background-position: 50% 0%;
        }
    </style>
}

@section bodyscripts{
    <script src="@Url.Content("~/Scripts/angular.js")"></script>
    <script src="@Url.Content("~/App/FaqAdmin/faqAdmin.app.js")"></script>
    <script src="@Url.Content("~/App/FaqAdmin/faqAdmin.service.js")"></script>
    <script src="@Url.Content("~/App/FaqAdmin/faqAdmin.controller.js")"></script>
}

<!-- === BEGIN CONTENT === -->
<div id="content" data-ng-app="wedding.faqAdmin" data-ng-controller="FaqAdminController as ctrl">
    <div class="container background-white">
        <div class="row margin-vert-30">
            <div class="col-md-12">
                <h2 class="margin-bottom-20">F.A.Q. Admin</h2>
                <div class="row">
                    <div class="col-md-12">
                        <div class="tab-content">
                            <div class="tab-pane active in fade" id="faq">
                                <div class="panel-group" id="accordion">
                                    <!-- FAQ Item -->
                                    <div class="panel panel-default panel-faq" data-ng-repeat="faq in ctrl.unAnsweredQuestions">
                                        <div class="panel-heading">
                                            <a data-toggle="collapse" data-parent="#accordion" href="{{'#faq-pend' + $index}}">
                                                <h4 class="panel-title">
                                                    {{faq.question}}
                                                    <span class="pull-right">
                                                        <i class="glyphicon glyphicon-plus"></i>
                                                    </span>
                                                </h4>
                                            </a>
                                        </div>
                                        <div id="{{'faq-pend' + $index}}" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <div class="form-group">
                                                    <label for="{{'faq-pending-question-' + $index}}">Question:</label>
                                                    <textarea id="{{'faq-pending-question-' + $index}}" data-ng-model="faq.question" maxlength="{{ctrl.questionMaxLength}}" class="form-control" rows="3"></textarea>
                                                </div>
                                                <span>{{faq.question ? faq.question.length : 0}} / {{ctrl.questionMaxLength}}</span>
                                                <div class="form-group">
                                                    <label for="{{'faq-pending-answer-' + $index}}">Answer:</label>
                                                    <textarea id="{{'faq-pending-answer-' + $index}}" data-ng-model="faq.answer" maxlength="{{ctrl.questionMaxLength}}" class="form-control" rows="3"></textarea>
                                                </div>
                                                <span>{{faq.answer ? faq.answer.length : 0}} / {{ctrl.questionMaxLength}}</span>
                                                <button data-ng-click="ctrl.answerQuestion(faq)" type="button" class="btn btn-primary btn-sm">Answer</button>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End FAQ Item -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="margin-vert-40">
                <div class="row">
                    <div class="col-md-12">
                        <div class="tab-content">
                            <div class="tab-pane active in fade" id="faq">
                                <div class="panel-group" id="accordion">
                                    <!-- FAQ Item -->
                                    <div class="panel panel-default panel-faq" data-ng-repeat="faq in ctrl.faq">
                                        <div class="panel-heading">
                                            <a data-toggle="collapse" data-parent="#accordion" href="{{'#faq-sub' + $index}}">
                                                <h4 class="panel-title">
                                                    {{faq.question}}
                                                    <span class="pull-right">
                                                        <i class="glyphicon glyphicon-plus"></i>
                                                    </span>
                                                </h4>
                                            </a>
                                        </div>
                                        <div id="{{'faq-sub' + $index}}" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <div class="form-group">
                                                    <label for="{{'faq-question-' + $index}}">Question:</label>
                                                    <textarea id="{{'faq-question-' + $index}}" data-ng-model="faq.question" maxlength="{{ctrl.questionMaxLength}}" class="form-control" rows="3"></textarea>
                                                </div>
                                                <span>{{faq.question ? faq.question.length : 0}} / {{ctrl.questionMaxLength}}</span>
                                                <div class="form-group">
                                                    <label for="{{'faq-answer-' + $index}}">Answer:</label>
                                                    <textarea id="{{'faq-answer-' + $index}}" data-ng-model="faq.answer" maxlength="{{ctrl.questionMaxLength}}" class="form-control" rows="3"></textarea>
                                                </div>
                                                <span>{{faq.answer ? faq.answer.length : 0}} / {{ctrl.questionMaxLength}}</span>
                                                <button data-ng-click="ctrl.updateFaq(faq)" type="button" class="btn btn-primary btn-sm">Update</button>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End FAQ Item -->
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- === END CONTENT === -->
