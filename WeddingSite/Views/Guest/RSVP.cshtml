@model WeddingSite.Models.RsvpViewModel

@{
    ViewBag.Title = "RSVP";
}

<div id="content">
    <div class="container background-white">
        <div class="row margin-vert-30">
            <!-- Register Box -->
            <div class="col-md-6 col-md-offset-3 col-sm-offset-3">
                @using (Html.BeginForm("RSVP", "Guest", FormMethod.Post, new { @class = "signup-page margin-top-20" }))
                {
                    <div class="signup-header">
                        <h2 class="margin-bottom-20">RSVP</h2>
                    </div>
                    <div>
                        <label>Guest Name</label>
                        @Html.DisplayFor(m => m.Name, new { @class = "form-control margin-bottom-20" })
                    </div>

                    <label>Guest Code</label>
                    @Html.TextBoxFor(m => m.GuestCode, new { @class = "form-control margin-bottom-20" })
                    @Html.ValidationMessageFor(m => m.GuestCode)

                    <label class="radio">
                        @Html.RadioButtonFor(m => m.Attending, true)
                        I will definitely be attending!
                    </label>
                    <label class="radio">
                        @Html.RadioButtonFor(m => m.Attending, false)
                        Sadly I will not be attending.
                    </label>
                    @Html.ValidationMessageFor(m => m.Attending)

                    <label>Including yourself. How many will be attending?<br/>(@(Model.AllowedGuests) allowed)</label>
                    <div>
                        @Html.TextBoxFor(m => m.NumberOfGuests)
                        @*<div class="btn-group">
                                <button class="btn">
                                    -
                                </button>
                                <button class="btn">
                                    +
                                </button>
                            </div>*@
                    </div>
                    @Html.ValidationMessageFor(m => m.NumberOfGuests)

                    <hr>
                    <div class="row">
                        <div class="col-lg-4 text-right">
                            <button class="btn btn-primary" type="submit">RSVP</button>
                        </div>
                    </div>
                }
            </div>
            <!-- End Register Box -->
        </div>
    </div>
</div>